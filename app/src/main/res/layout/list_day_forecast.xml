<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/rv_width"
    android:layout_height="@dimen/rv_height">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contentMarginLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/margin_medium" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contentMarginRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/margin_medium" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contentCenterDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTimeOfDay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_x_small"
        android:elevation="@dimen/margin_small"
        app:cardCornerRadius="@dimen/margin_small"
        app:layout_constraintBottom_toTopOf="@+id/contentCenterDivider"
        app:layout_constraintEnd_toEndOf="@+id/contentMarginRight"
        app:layout_constraintStart_toStartOf="@+id/contentMarginLeft"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivTimeTemp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/cloudy"
            android:background="@color/light_grey"
            android:scaleType="centerInside" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtTimeOfDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintTop_toBottomOf="@+id/contentCenterDivider"
        app:layout_constraintStart_toStartOf="@+id/contentMarginLeft"
        app:layout_constraintEnd_toEndOf="@+id/contentMarginRight"
        />

    <TextView

        android:id="@+id/txtTempAtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_xxlarge"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintTop_toBottomOf="@+id/txtTimeOfDay"
        app:layout_constraintStart_toStartOf="@+id/contentMarginLeft"
        app:layout_constraintEnd_toEndOf="@+id/contentMarginRight"
        />

</androidx.constraintlayout.widget.ConstraintLayout>